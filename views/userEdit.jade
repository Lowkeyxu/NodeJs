extends layout
block content
    form(action='/saveUser' method='psot')
        each user in userInfo
            div
                input(type='hidden' name='id' value='#{user.id}')
                label 登录名
                input(type='text' name='loginName' placeholder='请输入登录名' value='#{user.loginName}')
            div
                label 用户名
                input(type='text' name='userName' placeholder='请输入用户名' value='#{user.userName}')
            div
                label 性别
                input(type='text' name='sex' placeholder='请输入性别' value='#{user.sex}')
            div
                label 密码
                input(type='text' name='password' placeholder='请输入密码' value='#{user.password}')
        input(type='submit' value='提交')